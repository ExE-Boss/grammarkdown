{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "outFiles": ["${workspaceFolder}/dist/**/*"],
            "sourceMaps": true,
            "smartStep": true,
        },
        {
            "name": "Launch Mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--no-timeouts",
                "--colors",
                "${workspaceRoot}/dist/tests/index.js"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "runtimeArgs": ["--nolazy"],
            "env": { "NODE_ENV": "development" },
            "outFiles": ["${workspaceFolder}/dist/**/*"],
            "sourceMaps": true,
            "smartStep": true,
            "preLaunchTask": "gulp: build"
        },
        {
            "name": "Launch Mocha (current file)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--no-timeouts",
                "--colors",
                "-g", "${fileBasenameNoExtension}",
                "${workspaceRoot}/dist/tests/index.js"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "runtimeArgs": ["--nolazy"],
            "env": { "NODE_ENV": "development" },
            "outFiles": ["${workspaceFolder}/dist/**/*"],
            "sourceMaps": true,
            "smartStep": true,
            "preLaunchTask": "gulp: build"
        }
    ]
}