{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["es2015"],
        "module": "commonjs",
        "outDir": "../dist",
        "types": ["node", "mocha"],
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "strict": true,
        "stripInternal": true,
        "noUnusedLocals": true
    },
    "include": [
        "**/*.ts"
    ]
}